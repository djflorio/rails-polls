<h1>Edit Question</h1>
<%= link_to 'view', question_path(@question) %>

<%= render 'form' %>
<% @question.answers.each do |answer| %>
  <p>
    <%= answer.text %> |
    <%= link_to 'delete', [answer.question, answer],
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>

<%= render 'answers/form' %>